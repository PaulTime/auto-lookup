{
  "extends": "tslint-config-airbnb",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": false,
    "jsx": "react",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": [ "./lib/types", "./node_modules/@types"],
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
