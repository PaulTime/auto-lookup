{
  "parser":  "@typescript-eslint/parser",
  "extends":  [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions":  {
    "ecmaVersion":  2018,
    "sourceType":  "module",
    "ecmaFeatures":  {
      "jsx":  true
    }
  },
  "rules": {
    "indent": ["error", 2],
    "max-len": ["error", 110]
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ],
  "settings":  {
    "react":  {
      "version":  "detect"
    }
  }
}